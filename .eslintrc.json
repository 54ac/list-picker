{
	"root": true,
	"extends": ["eslint:recommended", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"plugins": ["prettier"],
	"rules": {
		"prettier/prettier": ["error"],
		"no-unused-vars": 1,
		"no-console": 1,
		"no-unused-expressions": [
			2,
			{ "allowShortCircuit": true, "allowTernary": true }
		]
	},
	"env": {
		"es2021": true,
		"browser": true
	}
}
